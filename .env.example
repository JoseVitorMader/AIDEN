# AIDEN Environment Configuration
# Copy this file to .env and fill in your API keys and settings

# ==========================================
# AI Configuration
# ==========================================
# Google Gemini API Key (Required for advanced AI features)
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# Alternative environment variable name (both work)
GEMINI_API_KEY=your_gemini_api_key_here

# ==========================================
# User Configuration
# ==========================================
# Your name - how AIDEN will address you
AIDEN_USER_NAME=User

# Enable enhanced AIDEN mode
AIDEN_MODE=true

# ==========================================
# Firebase Configuration (Optional)
# ==========================================
# Firebase project settings for voice learning and data storage
# The project is already configured, but you can use your own:

# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com/
# FIREBASE_API_KEY=your_firebase_web_api_key

# For production use, you'll need a service account key file:
# GOOGLE_APPLICATION_CREDENTIALS=path/to/serviceAccountKey.json

# ==========================================
# Voice Configuration
# ==========================================
# Default voice settings (will be learned and adapted over time)
VOICE_RATE=180
VOICE_VOLUME=0.9
VOICE_LANGUAGE=pt-br

# ==========================================
# System Configuration
# ==========================================
# Enable debug mode for troubleshooting
DEBUG_MODE=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO